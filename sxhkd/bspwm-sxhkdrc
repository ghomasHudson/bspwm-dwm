# bspwm-specific Hotkeys

# Change focus
super + {j,k}
    bspc node --focus {next.local,prev.local}

# Move window
super + shift + {j,k}
    bspc node -s {next.local,prev.local}

# Close window
super + q
    bspc node -c

# Focus master
super + space
    bspc node --focus biggest.local

# Promote to master
super + shift + space
    bspc node -s biggest.local

# Change desktop
super + {1-9,0}
    bspc desktop --focus ^{1-9,10}

# Move to desktop
super + shift + {1-9,0}
    bspc node --to-desktop ^{1-9,10}

# Fullscreen toggle
super + f
    bspc desktop --layout next

# Resize
super + {h,l}
    bspwm_node_resize {west,east}

# Reload config
super + F2
     ~/.config/bspwm/bspwmrc
